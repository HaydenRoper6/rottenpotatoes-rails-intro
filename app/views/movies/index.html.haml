-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      //%td %a{:href => '#', :class => 'hilite bg-warning', :id =>'movie_title'} Movie Title
      %th#title{:class => @title_css, :id => 'title_header' }= link_to "Movie Title", movies_path(key: 'title')
      %th Ratings
      %th#releases{:class => @release_css, :id => 'release_date_header'}= link_to "Release Date", movies_path(key: 'releases')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
